{
  "name": "my-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev:web": "turbo dev --filter=@my-monorepo/web",
    "build": "turbo build",
    "lint": "turbo lint && manypkg check",
    "check-types": "turbo check-types",
    "format": "biome format --write .",
    "format:check": "biome format ."
  },
  "devDependencies": {
    "@biomejs/biome": "latest",
    "@manypkg/cli": "latest",
    "turbo": "latest",
    "typescript": "latest"
  },
  "packageManager": "bun@1.3.6"
}