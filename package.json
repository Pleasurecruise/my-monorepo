{
	"name": "my-monorepo",
	"private": true,
	"workspaces": [
		"packages/*",
		"apps/*"
	],
	"scripts": {
		"dev:web": "turbo dev --filter=@my-monorepo/web",
		"build": "turbo build",
		"lint": "turbo lint && manypkg check",
		"lint:fix": "turbo lint:fix",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"check-types": "turbo check-types",
		"test": "turbo test",
		"test:coverage": "turbo test:coverage",
		"precommit": "bun run format:check && bun run lint && bun run check-types && bun run test",
		"precommit:fix": "bun run format && bun run lint:fix"
	},
	"devDependencies": {
		"@biomejs/biome": "latest",
		"@manypkg/cli": "latest",
		"@vitest/coverage-v8": "latest",
		"oxlint": "latest",
		"rolldown": "latest",
		"turbo": "latest",
		"typescript": "latest",
		"vitest": "latest"
	},
	"packageManager": "bun@1.3.6"
}
