{
	"name": "my-monorepo",
	"private": true,
	"workspaces": [
		"packages/*",
		"apps/*"
	],
	"scripts": {
		"dev:api": "turbo dev --filter=@my-monorepo/api",
		"dev:web": "turbo dev --filter=@my-monorepo/web",
		"dev:tauri": "turbo dev --filter=@my-monorepo/tauri",
		"dev:expo": "turbo dev --filter=@my-monorepo/mobile",
		"build:ui": "turbo build --filter=@my-monorepo/ui",
		"build:web": "turbo build --filter=@my-monorepo/web",
		"build:tauri": "turbo build --filter=@my-monorepo/tauri",
		"lint": "turbo lint && manypkg check",
		"lint:fix": "turbo lint:fix",
		"format": "turbo format",
		"format:check": "turbo format -- --check",
		"check-types": "turbo check-types",
		"test": "turbo test",
		"test:coverage": "turbo test:coverage",
		"precommit": "bun run format:check && bun run lint && bun run check-types && bun run test",
		"precommit:fix": "bun run format && bun run lint:fix"
	},
	"devDependencies": {
		"@manypkg/cli": "latest",
		"@tailwindcss/vite": "latest",
		"@types/react": "latest",
		"@types/react-dom": "latest",
		"@vitejs/plugin-react": "latest",
		"@vitest/coverage-v8": "latest",
		"oxfmt": "latest",
		"oxlint": "latest",
		"react": "latest",
		"react-dom": "latest",
		"rolldown": "latest",
		"turbo": "latest",
		"typescript": "latest",
		"vite": "latest",
		"vite-tsconfig-paths": "latest",
		"vitest": "latest"
	},
	"packageManager": "bun@1.3.8"
}
