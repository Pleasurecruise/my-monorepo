{
	"name": "@my-monorepo/api",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"exports": {
		"./routers": {
			"types": "./dist/trpc/routers/index.d.ts",
			"default": "./dist/trpc/routers/index.js"
		}
	},
	"scripts": {
		"dev": "tsx watch src/index.ts",
		"build": "tsc --project tsconfig.json --outDir dist && tsc-alias -p tsconfig.json --outDir dist",
		"start": "node dist/index.js",
		"check-types": "tsc --noEmit",
		"lint": "oxlint .",
		"lint:fix": "oxlint --fix .",
		"format": "oxfmt",
		"format:check": "oxfmt --check",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage"
	},
	"dependencies": {
		"@hono/node-server": "latest",
		"@hono/trpc-server": "latest",
		"@my-monorepo/ai": "workspace:*",
		"@my-monorepo/auth": "workspace:*",
		"@my-monorepo/env": "workspace:*",
		"@my-monorepo/logger": "workspace:*",
		"@my-monorepo/utils": "workspace:*",
		"@trpc/server": "latest",
		"hono": "latest"
	},
	"devDependencies": {
		"@my-monorepo/tsconfig": "workspace:*",
		"@types/node": "latest",
		"tsc-alias": "latest",
		"tsx": "latest"
	}
}
